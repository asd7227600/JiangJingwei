<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightBlack"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/xibi_icon_72"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_item_advantage"
        style="@style/first_black_item_advantage"
        android:text="Advantage"

        />
    <TextView
        android:id="@+id/tv_item_disadvantage"
        style="@style/first_black_item_disadvantage"
        android:text="Disadvantage"

        />
    <TextView
        android:id="@+id/tv_item_evaluate"
        style="@style/first_black_item_evaluate"
        android:text="Evaluate"

        />
    <TextView
        android:id="@+id/tv_item_remark"
        style="@style/first_black_item_remark"
        android:text="Remark"

        />


</LinearLayout>